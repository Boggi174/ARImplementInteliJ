<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.appgym.Visualizar_info_rutina">


    <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.pierfrancescosoffritti.androidyoutubeplayer.player.YouTubePlayerView
                    android:id="@+id/id_video_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.codesgood.views.JustifiedTextView
                    android:id="@+id/rutina_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la rutina"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15sp" />


            <com.codesgood.views.JustifiedTextView
                    android:id="@+id/des_rutinatext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion de la rutina"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>