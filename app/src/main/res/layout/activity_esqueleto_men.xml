<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appgym.EsqueletoMen">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_hombre"
        android:layout_width="193dp"
        android:layout_height="512dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_view"
        app:layout_constraintVertical_bias="0.266"
        app:lottie_autoPlay="true"
        app:lottie_fileName="44421-body-man.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />
    <Button
            android:layout_width="44dp"
            android:layout_height="45dp" android:id="@+id/openARMButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF" style="@style/Widget.AppCompat.Button"
            android:onClick="openArm" android:text="AR"/>



</androidx.constraintlayout.widget.ConstraintLayout>